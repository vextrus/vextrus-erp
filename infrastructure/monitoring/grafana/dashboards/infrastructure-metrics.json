{
  "dashboard": {
    "id": null,
    "uid": "infrastructure-metrics",
    "title": "Infrastructure Metrics Dashboard",
    "tags": ["infrastructure", "kubernetes", "resources", "vextrus"],
    "timezone": "Asia/Dhaka",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Cluster CPU Usage",
        "targets": [
          {
            "expr": "(1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        },
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Cluster Memory Usage",
        "targets": [
          {
            "expr": "(1 - (sum(node_memory_MemAvailable_bytes) / sum(node_memory_MemTotal_bytes))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        },
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "background"
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Total Pods Running",
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{phase=\"Running\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "green", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Pod Restart Count",
        "targets": [
          {
            "expr": "sum(increase(kube_pod_container_status_restarts_total[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "type": "timeseries",
        "title": "Pod CPU Usage by Service",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total[5m])) by (pod_name)",
            "refId": "A",
            "legendFormat": "{{pod_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "percentunit",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "type": "timeseries",
        "title": "Pod Memory Usage by Service",
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes) by (pod_name)",
            "refId": "A",
            "legendFormat": "{{pod_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "bytes",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "type": "timeseries",
        "title": "Network I/O",
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (pod_name)",
            "refId": "A",
            "legendFormat": "{{pod_name}} RX"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (pod_name)",
            "refId": "B",
            "legendFormat": "{{pod_name}} TX"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineInterpolation": "smooth",
              "lineWidth": 1,
              "fillOpacity": 5
            },
            "unit": "binBps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "type": "timeseries",
        "title": "Disk I/O",
        "targets": [
          {
            "expr": "sum(rate(container_fs_reads_bytes_total[5m])) by (pod_name)",
            "refId": "A",
            "legendFormat": "{{pod_name}} Read"
          },
          {
            "expr": "sum(rate(container_fs_writes_bytes_total[5m])) by (pod_name)",
            "refId": "B",
            "legendFormat": "{{pod_name}} Write"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineInterpolation": "smooth",
              "lineWidth": 1,
              "fillOpacity": 5
            },
            "unit": "binBps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 22},
        "type": "gauge",
        "title": "Temporal Queue Lag",
        "targets": [
          {
            "expr": "temporal_workflow_task_schedule_to_start_latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 5000}
              ]
            },
            "unit": "ms",
            "min": 0,
            "max": 10000
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 22},
        "type": "stat",
        "title": "Kafka Lag",
        "targets": [
          {
            "expr": "sum(kafka_consumer_lag_sum)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            },
            "unit": "none",
            "decimals": 0
          }
        },
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "background"
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 22},
        "type": "stat",
        "title": "MinIO Storage Used",
        "targets": [
          {
            "expr": "(minio_disk_storage_used_bytes / minio_disk_storage_total_bytes) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        }
      },
      {
        "id": 12,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "type": "table",
        "title": "Pod Resource Limits & Requests",
        "targets": [
          {
            "expr": "kube_pod_container_resource_limits",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {"id": "unit", "value": "short"},
                {"id": "decimals", "value": 2}
              ]
            }
          ]
        }
      },
      {
        "id": 13,
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 36},
        "type": "timeseries",
        "title": "HPA Scaling Events",
        "targets": [
          {
            "expr": "kube_horizontalpodautoscaler_status_current_replicas",
            "refId": "A",
            "legendFormat": "{{horizontalpodautoscaler}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineInterpolation": "stepAfter",
              "lineWidth": 2,
              "fillOpacity": 0
            },
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 14,
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 36},
        "type": "bargauge",
        "title": "PVC Usage",
        "targets": [
          {
            "expr": "(kubelet_volume_stats_used_bytes / kubelet_volume_stats_capacity_bytes) * 100",
            "refId": "A",
            "legendFormat": "{{persistentvolumeclaim}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "color": {"mode": "thresholds"}
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      }
    ]
  },
  "overwrite": true
}