{
  "dashboard": {
    "id": null,
    "uid": "business-kpis",
    "title": "Business KPIs Dashboard",
    "tags": ["business", "kpis", "vextrus", "bangladesh"],
    "timezone": "Asia/Dhaka",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Total Revenue (BDT)",
        "targets": [
          {
            "expr": "sum(invoice_total_amount_bdt)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyBDT",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 1000000},
                {"color": "green", "value": 10000000}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Active Purchase Orders",
        "targets": [
          {
            "expr": "count(purchase_order_status{status=\"active\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0,
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "value"
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Pending Approvals",
        "targets": [
          {
            "expr": "sum(workflow_pending_approvals)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "background"
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "VAT Collected (15%)",
        "targets": [
          {
            "expr": "sum(invoice_vat_amount_bdt)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyBDT",
            "decimals": 0,
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "type": "timeseries",
        "title": "Daily Revenue Trend (BDT)",
        "targets": [
          {
            "expr": "sum(rate(invoice_total_amount_bdt[1d]))",
            "refId": "A",
            "legendFormat": "Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 30,
              "gradientMode": "opacity",
              "spanNulls": false,
              "showPoints": "never"
            },
            "unit": "currencyBDT",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "type": "piechart",
        "title": "Revenue by Category",
        "targets": [
          {
            "expr": "sum(invoice_total_amount_bdt) by (category)",
            "refId": "A",
            "legendFormat": "{{category}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyBDT",
            "decimals": 0
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "values": ["value", "percent"]
          },
          "pieType": "donut",
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 14},
        "type": "bargauge",
        "title": "Approval Times by Department",
        "targets": [
          {
            "expr": "avg(workflow_approval_duration_seconds) by (department)",
            "refId": "A",
            "legendFormat": "{{department}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 3600},
                {"color": "red", "value": 86400}
              ]
            },
            "color": {"mode": "thresholds"}
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 14},
        "type": "stat",
        "title": "Tax Withholding Summary",
        "targets": [
          {
            "expr": "sum(tax_withholding_amount_bdt) by (type)",
            "refId": "A",
            "legendFormat": "{{type}}"
          }
        ],
        "description": "Contractors: 7.5%, Suppliers: 5%, Services: 10%",
        "fieldConfig": {
          "defaults": {
            "unit": "currencyBDT",
            "decimals": 0,
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "graphMode": "none",
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "value"
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 14},
        "type": "gauge",
        "title": "NBR Compliance Score",
        "targets": [
          {
            "expr": "(count(nbr_compliant_transactions) / count(total_transactions)) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "options": {
          "orientation": "auto",
          "showThresholdLabels": true,
          "showThresholdMarkers": true,
          "text": {
            "titleSize": 24,
            "valueSize": 36
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "type": "table",
        "title": "Recent Transactions",
        "targets": [
          {
            "expr": "topk(10, invoice_total_amount_bdt)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {"id": "unit", "value": "currencyBDT"},
                {"id": "decimals", "value": 0}
              ]
            }
          ]
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 30},
        "type": "timeseries",
        "title": "Workflow Completion Rate",
        "targets": [
          {
            "expr": "sum(rate(workflow_completed_total[5m])) by (workflow_type)",
            "refId": "A",
            "legendFormat": "{{workflow_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 12,
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 30},
        "type": "timeseries",
        "title": "Employee Onboarding Progress",
        "targets": [
          {
            "expr": "sum(employee_onboarding_stage) by (stage)",
            "refId": "A",
            "legendFormat": "{{stage}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineInterpolation": "linear",
              "lineStyle": {"fill": "solid"},
              "lineWidth": 2,
              "fillOpacity": 20,
              "stacking": {"mode": "normal"}
            },
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      }
    ]
  },
  "overwrite": true
}