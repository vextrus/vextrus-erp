{
  "id": null,
  "uid": "infrastructure-monitoring",
  "title": "Infrastructure Monitoring",
  "tags": ["infrastructure", "monitoring", "vextrus"],
  "timezone": "Asia/Dhaka",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "type": "stat",
      "title": "Total Services",
      "targets": [
        {
          "expr": "count(up)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 5},
              {"color": "green", "value": 10}
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "type": "stat",
      "title": "Services UP",
      "targets": [
        {
          "expr": "count(up == 1)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 5},
              {"color": "green", "value": 10}
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
      "type": "table",
      "title": "Service Status",
      "targets": [
        {
          "expr": "up",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"type": "value", "value": "1", "text": "UP"},
            {"type": "value", "value": "0", "text": "DOWN"}
          ]
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Value"},
            "properties": [
              {"id": "displayName", "value": "Status"},
              {"id": "custom.displayMode", "value": "color-background"}
            ]
          }
        ]
      }
    },
    {
      "id": 4,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 18},
      "type": "timeseries",
      "title": "Service Availability Over Time",
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineInterpolation": "stepAfter",
            "lineWidth": 1,
            "fillOpacity": 10
          },
          "unit": "short",
          "min": 0,
          "max": 1
        }
      }
    },
    {
      "id": 5,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 18},
      "type": "timeseries",
      "title": "Prometheus Memory Usage",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"prometheus\"}",
          "legendFormat": "Memory Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 6,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 26},
      "type": "timeseries",
      "title": "OTEL Collector CPU Usage",
      "targets": [
        {
          "expr": "otelcol_process_cpu_seconds",
          "legendFormat": "CPU Seconds",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "s",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 7,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 26},
      "type": "timeseries",
      "title": "OTEL Collector Memory",
      "targets": [
        {
          "expr": "otelcol_process_memory_rss",
          "legendFormat": "RSS Memory",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 8,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 34},
      "type": "gauge",
      "title": "System Health Score",
      "targets": [
        {
          "expr": "(count(up == 1) / count(up)) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 75},
              {"color": "green", "value": 95}
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      }
    }
  ]
}