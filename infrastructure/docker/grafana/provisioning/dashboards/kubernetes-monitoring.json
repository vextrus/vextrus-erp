{
  "title": "Vextrus ERP Production Dashboard",
  "uid": "vextrus-prod",
  "version": 1,
  "timezone": "Asia/Dhaka",
  "panels": [
    {
      "id": 1,
      "title": "Service Request Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) by (service)",
          "legendFormat": "{{ service }}"
        }
      ]
    },
    {
      "id": 2,
      "title": "Error Rate by Service",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (service)",
          "legendFormat": "{{ service }}"
        }
      ]
    },
    {
      "id": 3,
      "title": "RBAC Permission Check Latency (p95)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rbac_permission_check_duration_seconds_bucket)",
          "legendFormat": "p95 latency"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                0.01
              ],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "type": "query"
          }
        ],
        "name": "RBAC Performance Alert",
        "message": "RBAC permission checks exceeding 10ms target"
      }
    },
    {
      "id": 4,
      "title": "API Gateway Throughput",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{service=\"auth-service\"}[1m]))",
          "legendFormat": "Requests/sec"
        }
      ]
    },
    {
      "id": 5,
      "title": "Active Users by Tenant",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(auth_active_sessions) by (tenant_id)",
          "format": "table"
        }
      ]
    },
    {
      "id": 6,
      "title": "Bangladesh SMS Cost (BDT)",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(increase(sms_cost_bdt_total[24h])) by (provider)",
          "legendFormat": "{{ provider }}"
        }
      ]
    },
    {
      "id": 7,
      "title": "File Storage Usage by Tenant",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum(file_storage_bytes_used) by (tenant_id)"
        }
      ]
    },
    {
      "id": 8,
      "title": "Multi-tenant Isolation Status",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum(tenant_isolation_violations_total)",
          "legendFormat": "Violations"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Database Connections",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 32
      },
      "targets": [
        {
          "expr": "pg_stat_database_numbackends{datname=\"vextrus_erp\"}",
          "legendFormat": "Active Connections"
        },
        {
          "expr": "pg_settings_max_connections",
          "legendFormat": "Max Connections"
        }
      ]
    },
    {
      "id": 10,
      "title": "Kafka Consumer Lag",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 32
      },
      "targets": [
        {
          "expr": "kafka_consumer_lag_sum",
          "legendFormat": "{{ topic }}"
        }
      ]
    },
    {
      "id": 11,
      "title": "Service Memory Usage",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 40
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{pod=~\"vextrus-.*\"} / 1024 / 1024",
          "legendFormat": "{{ pod }}"
        }
      ]
    },
    {
      "id": 12,
      "title": "Service CPU Usage",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 40
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{pod=~\"vextrus-.*\"}[5m])",
          "legendFormat": "{{ pod }}"
        }
      ]
    },
    {
      "id": 13,
      "title": "Response Time Distribution (p50, p95, p99)",
      "type": "heatmap",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 48
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, http_request_duration_seconds_bucket)",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, http_request_duration_seconds_bucket)",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, http_request_duration_seconds_bucket)",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "id": 14,
      "title": "Bangladesh Compliance Status",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 56
      },
      "targets": [
        {
          "expr": "btrc_data_localization_violations_total",
          "legendFormat": "BTRC Violations"
        },
        {
          "expr": "nbr_audit_trail_missing_total",
          "legendFormat": "NBR Audit Issues"
        },
        {
          "expr": "rajuk_compliance_status",
          "legendFormat": "RAJUK Status"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      }
    }
  ],
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  }
}