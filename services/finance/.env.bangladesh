# Bangladesh Compliance Environment Variables
# This file contains all configuration for Bangladesh regulatory compliance features

# ============================================
# NBR (National Board of Revenue) Configuration
# ============================================
NBR_API_URL=https://api.nbr.gov.bd/v1
NBR_API_KEY=your_nbr_api_key_here
NBR_CLIENT_ID=your_nbr_client_id
NBR_ENCRYPTION_KEY=your_32_byte_hex_encryption_key
NBR_ENCRYPTION_IV=your_16_byte_hex_iv

# NBR Auto-submission settings
AUTO_SUBMIT_VAT_RETURN=false
AUTO_SUBMIT_MUSHAK=false
AUTO_SUBMIT_CHALLAN=false

# ============================================
# Payment Gateway Configuration
# ============================================

# bKash Configuration
BKASH_API_URL=https://checkout.pay.bka.sh/v1.2.0-beta
BKASH_APP_KEY=your_bkash_app_key
BKASH_APP_SECRET=your_bkash_app_secret
BKASH_USERNAME=your_bkash_username
BKASH_PASSWORD=your_bkash_password
BKASH_CALLBACK_URL=http://localhost:3014/payment/callback/bkash

# Nagad Configuration
NAGAD_API_URL=https://api.mynagad.com
NAGAD_MERCHANT_ID=your_nagad_merchant_id
NAGAD_PUBLIC_KEY=your_nagad_public_key
NAGAD_PRIVATE_KEY=your_nagad_private_key
NAGAD_CALLBACK_URL=http://localhost:3014/payment/callback/nagad

# SSLCommerz Configuration
SSLCOMMERZ_API_URL=https://sandbox.sslcommerz.com
SSLCOMMERZ_STORE_ID=your_store_id
SSLCOMMERZ_STORE_PASSWORD=your_store_password
SSLCOMMERZ_CALLBACK_URL=http://localhost:3014/payment/callback/sslcommerz
SSLCOMMERZ_SANDBOX=true

# ============================================
# Banking Integration Configuration
# ============================================

# BRAC Bank Configuration
BRAC_BANK_API_URL=https://api.bracbank.com
BRAC_BANK_API_KEY=your_brac_api_key
BRAC_BANK_API_SECRET=your_brac_api_secret
BRAC_BANK_CLIENT_ID=your_brac_client_id

# Dutch Bangla Bank (DBBL) Configuration
DBBL_API_URL=https://api.dutchbanglabank.com
DBBL_API_KEY=your_dbbl_api_key
DBBL_API_SECRET=your_dbbl_api_secret
DBBL_USERNAME=your_dbbl_username
DBBL_PASSWORD=your_dbbl_password

# Islami Bank Configuration
ISLAMI_BANK_API_URL=https://api.islamibank.com.bd
ISLAMI_BANK_API_KEY=your_islami_api_key
ISLAMI_BANK_API_SECRET=your_islami_api_secret

# Standard Chartered Bank Configuration
SCB_API_URL=https://api.sc.com/bd
SCB_API_KEY=your_scb_api_key
SCB_API_SECRET=your_scb_api_secret
SCB_CLIENT_ID=your_scb_client_id

# ============================================
# Company Information (for compliance documents)
# ============================================
COMPANY_NAME=Your Company Ltd
COMPANY_NAME_BENGALI=আপনার কোম্পানি লিমিটেড
COMPANY_BIN=123456789
COMPANY_TIN=123456789012
COMPANY_ADDRESS=House 123, Road 45, Gulshan-2, Dhaka-1212, Bangladesh
COMPANY_ADDRESS_BENGALI=বাড়ি ১২৩, রোড ৪৫, গুলশান-২, ঢাকা-১২১২, বাংলাদেশ
COMPANY_PHONE=01700000000
COMPANY_EMAIL=info@yourcompany.com
COMPANY_TAX_CIRCLE=Circle-123
COMPANY_TAX_ZONE=Zone-4

# ============================================
# Compliance Reporting Configuration
# ============================================
COMPLIANCE_REPORT_RECIPIENTS=finance@yourcompany.com,compliance@yourcompany.com
COMPLIANCE_REMINDER_DAYS=7,3,1
AUTO_GENERATE_COMPLIANCE_REPORTS=true
COMPLIANCE_REPORT_SCHEDULE_ENABLED=true

# Monthly VAT Return Settings
VAT_RETURN_AUTO_GENERATE=true
VAT_RETURN_AUTO_SUBMIT=false
VAT_RETURN_GENERATION_DAY=10
VAT_RETURN_SUBMISSION_DAY=15

# Annual Tax Return Settings
INCOME_TAX_RETURN_AUTO_GENERATE=true
INCOME_TAX_RETURN_AUTO_SUBMIT=false
TAX_YEAR_START_MONTH=7
TAX_YEAR_END_MONTH=6

# ============================================
# Document Generation Settings
# ============================================
MUSHAK_TEMPLATES_PATH=/app/templates/mushak
CHALLAN_TEMPLATES_PATH=/app/templates/challan
GENERATE_QR_CODES=true
GENERATE_BARCODES=true
PDF_GENERATION_TIMEOUT=30000
USE_BENGALI_NUMERALS=true

# ============================================
# Reconciliation Settings
# ============================================
AUTO_RECONCILIATION_ENABLED=true
RECONCILIATION_TOLERANCE_AMOUNT=1
RECONCILIATION_TOLERANCE_PERCENTAGE=0.001
RECONCILIATION_DATE_RANGE_DAYS=3
RECONCILIATION_TARGET_MATCH_RATE=95

# ============================================
# Notification Settings
# ============================================
SEND_COMPLIANCE_REMINDERS=true
SEND_PAYMENT_DUE_ALERTS=true
SEND_RECONCILIATION_REPORTS=true
NOTIFICATION_EMAIL_FROM=noreply@yourcompany.com

# ============================================
# API Rate Limits
# ============================================
NBR_API_RATE_LIMIT=100
NBR_API_RATE_WINDOW=3600000
PAYMENT_GATEWAY_TIMEOUT=30000
BANKING_API_TIMEOUT=30000

# ============================================
# Security Settings
# ============================================
ENCRYPT_SENSITIVE_DATA=true
AUDIT_LOG_ENABLED=true
COMPLIANCE_DATA_RETENTION_DAYS=2555
PII_MASKING_ENABLED=true

# ============================================
# Testing/Development Settings
# ============================================
USE_MOCK_NBR_API=false
USE_MOCK_PAYMENT_GATEWAYS=false
USE_MOCK_BANKING_APIS=false
COMPLIANCE_TEST_MODE=false

# ============================================
# Feature Flags
# ============================================
FEATURE_TAX_CALCULATION=true
FEATURE_BENGALI_LOCALIZATION=true
FEATURE_NBR_INTEGRATION=true
FEATURE_MUSHAK_GENERATION=true
FEATURE_PAYMENT_GATEWAYS=true
FEATURE_BANKING_INTEGRATION=true
FEATURE_CHALLAN_GENERATION=true
FEATURE_COMPLIANCE_REPORTING=true

# ============================================
# ML/AI Features Integration
# ============================================
USE_AI_FOR_RECONCILIATION=true
USE_ML_FOR_TAX_PREDICTION=true
USE_OCR_FOR_INVOICE_PROCESSING=true
AI_RECONCILIATION_CONFIDENCE_THRESHOLD=0.85

# ============================================
# Logging and Monitoring
# ============================================
LOG_COMPLIANCE_EVENTS=true
LOG_PAYMENT_TRANSACTIONS=true
LOG_NBR_SUBMISSIONS=true
COMPLIANCE_METRICS_ENABLED=true
ALERT_ON_COMPLIANCE_FAILURE=true

# ============================================
# Database Settings for Compliance Data
# ============================================
COMPLIANCE_DB_SCHEMA=compliance
AUDIT_DB_SCHEMA=audit
ARCHIVE_OLD_COMPLIANCE_DATA=true
ARCHIVE_AFTER_DAYS=365

# ============================================
# Fiscal Year Settings
# ============================================
FISCAL_YEAR_START=07-01
FISCAL_YEAR_END=06-30
TAX_YEAR_FORMAT=YYYY-YYYY+1
USE_BANGLADESH_FISCAL_CALENDAR=true

# ============================================
# Regional Settings
# ============================================
DEFAULT_CURRENCY=BDT
DEFAULT_LANGUAGE=bn
DATE_FORMAT=DD/MM/YYYY
TIME_ZONE=Asia/Dhaka
WORKING_DAYS=SUN,MON,TUE,WED,THU
WEEKEND_DAYS=FRI,SAT